{
  "version": 2,
  "builds": [
    {
      "src": "server/src/server.ts",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "buildCommand": "npm run build:vercel",
        "outputDirectory": "dist/web-ide"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/src/server.ts"
    },
    {
      "src": "/ws",
      "dest": "server/src/server.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/web-ide/$1",
      "continue": true
    },
    {
      "src": "/(.*)",
      "dest": "/dist/web-ide/index.html"
    }
  ]
} 